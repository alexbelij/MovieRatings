<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/gutter">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/battery_optimization_info_screen_content"
            android:textAppearance="@style/Text.Dark.Large" />

        <Button
            style="@style/Widget.AppCompat.Button.Colored"
            android:id="@+id/battery_optimization_cta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/gutter"
            android:text="@string/battery_optimization_info_screen_cta" />

    </LinearLayout>

</ScrollView>