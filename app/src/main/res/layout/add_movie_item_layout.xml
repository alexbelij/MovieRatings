<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="2dp"
    android:layout_margin="4dp"
    tools:layout_width="180dp"
    tools:layout_margin="8dp"
    app:cardBackgroundColor="@color/colorAccent"
    app:cardCornerRadius="4dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.fenchtose.movieratings.widgets.RatioImageView
            android:id="@+id/imageview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:adjustViewBounds="true"
            android:minHeight="120dp"
            app:ratioimageview__ratio="0.85"
            android:background="@color/onyx_accent"
            android:src="@drawable/ic_playlist_add_white_48dp"
            />

        <TextView
            android:id="@+id/titleview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:layout_below="@id/imageview"
            android:layout_gravity="bottom"
            android:textAppearance="@style/Text.Light.Medium"
            android:text="@string/movie_collection_search_and_add"
            android:gravity="center"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>